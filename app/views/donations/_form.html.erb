<%= form_for @donation do |f| %>

  <div class="main_form">

    <div class="track_don_project">
      <% if controller_name == 'projects' %>
        <div class="track_don_project_name">
          <%= @project.name %>
        </div>
        <div class="hint">
          <%= link_to t('need_to_trackdon_for_another_project'), "#{root_path}#track_donation" %>
        </div>
      <% else %>
        <%= f.hidden_field :project_name %>
        <div class="hint"><%= f.label(:project_name, 'ie. Wikipedia, Redd Cross, UNR') %></div>
        <div id="project_attributes">
          <%= f.text_area :project_description %>
          <div class="hint"><%= f.label(:project_description, 'Project Description') %></div>
          <%= f.text_field :project_url %>
          <div class="hint"><%= f.label(:project_url, 'Project URL') %></div>
        </div>        
      <% end %>
        
    </div>

    <div class="track_don_quantity" style="display: none">
      <%= f.text_field :quantity, placeholder: '125' %>
      <div class="hint"><%= f.label(:quantity, t('how_much_question')) %></div>
    </div>
    <div class="track_don_date">
      <%= f.date_field :date %>
      <div class="hint"><%= f.label(:date, t('when_did_you_donate')) %></div>
    </div>

    <div class="track_don_quantity_B">
      <div class="track_don_quantity_B_option">
        
        <%= f.text_field :quantity, placeholder: '125' %>

        <div class="track_don_currency_selector">
          <%= f.select :currency, [['â‚¬', 'EUR'],['$', 'USD']] %>
        </div>

        <div class="track_don_quantity_B_option_hint">
          <%= f.check_box :quantity_privacy %>
          <%= f.label(:quantity_privacy, t('donations.keep_the_quantity_private'), title: "Don't be shy sharing the quantity. Everyone donates what they can / feels is right. So even a penny would be good. On the other hand, it would be fun to study how individual behaviours influence others... for good or for bad!", class: 'tipsit') %>
        </div>

      </div>
      <div class="hint"><%= f.label(:quantity, t('how_much_question')) %></div>
    </div>

  </div>

  <div class="track_don_options">

    <div>
      <label><input type="checkbox" name="i_want_to_explain" id="i_want_to_explain"> <%= t('i_want_to_explain_why') %></label>
      <div id="i_want_to_explain_content">
        <%= f.text_area(:comment) %>
      </div>
    </div>

  </div>

  <% if params[:controller] == 'projects' %> 
    <%= f.hidden_field :project_id, :value => @project.id %>
  <% end %>
  <%= f.submit('TrackDon', class: 'big' ) %>

<% end %>
