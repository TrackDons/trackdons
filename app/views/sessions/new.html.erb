<section class="content_column">

  <h1><%= title t('.login') %></h1>

  <%= form_for :session, url: login_path, html: {class: "simple_form"} do |f| %>
    <p>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </p>

    <p>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </p>

    <p>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t '.remember_me' %></span>
      <% end %>
    </p>

    <%= f.submit t('.login_action'), class: "btn btn-primary" %>
    <%= link_to t('.forgot_password'), new_password_reset_path  %>
  <% end %>

  <%= render 'invitation_to_waitlist' %>

</section>
