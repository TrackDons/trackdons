<% if logged_in? %>
  <% if current_user.following?(@project) %>
    <%= link_to t('.following'), unfollow_project_path(@project),
          :remote => true,
          :method => :patch,
          :class => "button active",
          :id => 'unfollow_button' %>
  <% else %>
    <%= link_to t('.follow'), follow_project_path(@project),
          :remote => true,
          :method => :patch,
          :class => "button not_active tipsit",
          :id => 'follow_button',
          title: t('.follow_explanation') %>
  <% end %>
<% else %>
  <%= link_to t('.follow'), login_path,
          :class => "button not_active tipsit",
          :id => 'follow_button',
          title: t('.follow_explanation') %>
<% end %>

