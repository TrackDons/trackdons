<header>
  <h1>
    <%= gravatar_for(@user, size: 72) %> <%= @user.name %>
  </h1>

  <div id="donations_last_month">
    <%= money @user.total_donations_last_month(current_user) %> <%= t('.donated') %>
    <small><%= t('.in_the_last_month') %></small>
  </div>

  <div id="donations_overall">
    <%= money @user.total_donations(current_user) %> <%= t('.in_total') %>
  </div>
</header>
