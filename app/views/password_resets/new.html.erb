<section class="content_column">

  <h1><%= title t('.reset_your_password') %></h1>

  <p><%= t('.enter_your_email') %></p>

  <%= form_tag password_resets_path, {class: 'simple_form'} do %>
    <p>
      <%= label_tag :email, t('.email') %>
      <%= text_field_tag :email %>
    </p>

    <%= submit_tag t('.continue'), class: "btn btn-primary" %>
  <% end %>

</section>
