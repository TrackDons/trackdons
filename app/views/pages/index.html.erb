<% set_meta_tags :description => t('metas.home.description') %>

<section id="home" class="content_column">

  <h1 class="logo">TrackDons</h1>
  <h2><%= t 'tagline' %></h2>
  <ul>
    <li><%= t 'main_bullet_1' %></li>
    <li><%= t 'main_bullet_2' %></li>
    <li><%= t 'main_bullet_3' %></li>
  </ul>
  <%= link_to t('home.read_more_about_this_project'), about_path, class: 'button' %>
</section>

<section id="track_donation" class="pt3">

  <div class="content-big">

    <% if logged_in? %>
      <header class="mt3 mb3">
        <h3 class="main-color">
          <% if has_donations? %>
            <%= t 'track_a_donation' %>
          <% else %>
            <%= t 'track_your_first_donation' %>
          <% end %>
        </h3>
      </header>

      <%= render 'donations/form' %>
    <% end %>
  </div>

</section>
