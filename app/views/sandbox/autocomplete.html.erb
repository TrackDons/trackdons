        <div class="inline-block justify-columns" style="width: 540px;">
          <div class="form-group justify-item" style="width: 130px;">
            <div class="form-label  uppercase">
              <label for="projects">Project</label>
            </div>
            <div class="form-fields">
              <input type="text" id="projects" data-projects_url = "<%= projects_path %>" class="hundred percent js-select2"/>
            </div>
          </div>
          
          <div class="form-group justify-item">
            <div class="form-label uppercase">
              <label for="mvc">Amount</label>
            </div>
