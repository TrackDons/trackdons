                  <option value="">4 Months</option>
                  <option value="">6 Months</option>
                  <option value="">12 Months</option>
                </select>
              </div>
            </div>
          </div>

          <div class="form-group justify-item">
            <div class="form-label uppercase">
              <label for="pikadate">Starting date</label>
            </div>
            <div class="form-fields">
              <input style="width: 120px;" type="text" placeholder="Pick a date" id="pikadate" class="field-text" data-behaviour="datepicker" value="9 Oct 2014"/>
            </div>
          </div>

          <div class="form-group justify-item">
            <div class="form-label uppercase">
              <label for="private">Private?</label>
            </div>
            <div class="form-fields solid">
              <input id="private" type="checkbox" class="mr1" />
              <label for="private">Yes</label>
            </div>
          </div>
        </div>

      </form>
    </div>
</div>

